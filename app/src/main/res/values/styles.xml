<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <!-- Title text style -->
    <style name="TextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title text style -->
    <style name="TextSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorSubtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Description text style -->
    <style name="TextDesc">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- About text style -->
    <style name="TextAbout">
        <item name="android:textSize">20sp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="LogoImage">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">180dp</item>
    </style>
</resources>
