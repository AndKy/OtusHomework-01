<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextTitleCommon">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title text style -->
    <style name="TextTitle" parent="TextTitleCommon">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <!-- Subtitle text style -->
    <style name="TextSubtitle" parent="TextTitleCommon">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSubtitle</item>
    </style>

    <!-- Title text style -->
    <style name="FavTextTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Number text style -->
    <style name="FavTextNumber">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Subtitle text style -->
    <style name="FavTextSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSubtitle</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Description text style -->
    <style name="TextDesc">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- About text style -->
    <style name="TextAbout">
        <item name="android:textSize">20sp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="LogoImage">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">180dp</item>
    </style>

    <style name="TextTitle.Collapsed">
    </style>

    <style name="TextTitle.Expanded">
        <item name="android:textSize">32sp</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:textColor">#fff</item>
        <item name="android:shadowColor">#000</item>
    </style>
</resources>
